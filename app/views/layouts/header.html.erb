<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".nav.home"), home_path %></li>
        <li><%= link_to t(".nav.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".headers.users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".headers.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".headers.profile"), current_user %></li>
              <li><%= link_to t(".headers.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".headers.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".nav.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
