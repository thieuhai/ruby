<% provide :title, t(".title") %>
<% provide :form_submit, t(".form.submit") %>
<h1><%= t ".header" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".gravatar_change"), Settings.links.gravatar.email, target: "_blank" %>
    </div>
  </div>
</div>
